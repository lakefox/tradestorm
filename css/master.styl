html, body
  margin: 0
  padding: 0
  background: #01005e

.title
  font-family: 'Staatliches'
  font-size: 40px
  color: #17b794
  margin: 20px

.center_col
  width: 90%
  max-width: 700px
  margin: auto

.box
  background: #28518a
  width: 100%
  padding-bottom: 50px
  margin-bottom: 50px

.head
  background: #17b794
  color: #fff
  width: calc(100% - 20px)
  height: 80px
  font-family: 'Oswald'
  font-size: 27px
  line-height: 80px
  padding-left: 20px
  display: flex
  margin-bottom: 15px

.price
  float: right
  padding-right: 20px
  font-size: 30px

.content
  display: flex

.col
  width: 50%
  height: 100%
  margin-top: 10px;

.col_head
  color: #fff
  font-family: 'Oswald'
  text-align: center
  font-size: 25px

.buy_price
  text-align: center
  font-size: 45px
  color: #fff
  font-family: 'Oswald'
  margin-top: 15px

.choice
  text-align: center
  font-size: 40px
  font-family: 'Oswald'
  color: #fff
  margin-top: 10px

#edit
  color: #fff
  float: right

.closed
  position: relative
  width: 100%

.closed::before
  position: absolute
  left: 50%
  transform: translateX(-50%)
  font-size: 50px
  color: #fff
  margin-top: 20px
  top: -30px
  cursor: pointer

#stock_news
  position: fixed
  left: 50%
  top: 5%
  transform: translateX(-50%)
  width: 90%
  height: 90vh
  max-width: 700px
  margin: auto
  background: #fff
  border-radius: 10px
  box-shadow: 0px 0px 30px -5px #000
  z-index: 2
  display: none
  text-overflow: clip

#exit
  float: right
  margin: 10px
  font-size: 25px
  color: #ff4242
  cursor: pointer

#news_feed
  width: 90%
  margin: auto
  height: 80%
  overflow-y: auto
  overflow-x: hidden

.post_title
  font-size: 18px
  color: #212121
  font-family: 'Roboto Slab', serif
  width: 40%
  text-decoration: none

.post_meta
  font-family: 'Roboto', sans-serif
  color: #ccc
  font-size: 12px
  margin-left: 10px
  margin-top: 5px

.post_preview
  margin-top: 10px
  font-family: 'Nunito'
  font-size: 15px
  color: #565656;

.post
  margin-bottom: 30px
  display: flex
  border-top: 4px solid #eee
  padding-top: 15px

.post_cont
  width: 50%
  margin-left: 3%

.head_name
  width: 100%
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden

.your_info
  font-size: 20px
  color: #fff
  width: 80%
  margin: auto
  font-family: 'Roboto Slab'
